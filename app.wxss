/**app.wxss**/
.clear::after {
  clear: both;
  content: '';
  display: block;
}
.clear .left {
  float: left;
}
.clear .right {
  float: right;
}
.flex {
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
}
.flex-middle {
    -webkit-box-pack: center;
    -moz-box-pack: center;
    -ms-flex-align:center;
    -webkit-align-items: center;
    -moz-align-items: center;
    align-items: center;
}
.flex-left {
    -ms-flex-order: 1;
    -webkit-order: 1;
    order: 1;
}
.flex-right {
    -ms-flex-order: 3;
    -webkit-order: 3;
    order: 3;
}
.flex-auto {
    min-width: 0;
    -ms-flex-order: 2;
    -webkit-order: 2;
    order: 2;
    -webkit-box-flex: 1;
    -webkit-flex: 1;
    -ms-flex: 1;
    flex: 1;
}
.opacity {
    opacity: 0.9;
}
.center {
    text-align: center;
}

.form {
    margin: 20px;
}
.form .title {
    text-align: center;
    font-size: 1em;
    margin-bottom: 20px;
}
.form input {
    width: 100%;
    border-bottom: #dedede 1px solid;
    margin-bottom: 10px;
    font-size: 0.8em;
}
.submit {
    margin: 20px 15px;
    font-size: 0.8em;
    background: #ff6b1a;
    border: none;
    color: #fff;
}
.main-list .item {
  margin-left: 15px;
  border-bottom: #dedede 1px solid;
  padding: 10px 15px 10px 0;
}
.main-list .hover {
  background: rgba(0, 0, 0, 0.1);
  opacity: 0.7;
}
.main-list .item .icon {
  width: 20px;
  height: 20px;
  border-radius: 50%;
}
.main-list .item .icon image {
  width: 16px;
  height: 16px;
  margin: 2px;
}
.main-list .in .icon {
  background: #06ca0a;
}
.main-list .out .icon {
  background: #f32626;
}
.main-list .item .text {
  line-height: 20px;
  color: #494949;
  font-size: 0.9em;
  margin: 0 10px;
}
.main-list .item .angle-right {
    width: 18px;
    height: 18px;
}
.empty {
  text-align: center;
  margin: 20px auto;
  font-size: 0.8em;
  color: #777;
}
.empty image {
  width: 60px;
  height: 60px;
  display: inline-block;
  margin-bottom: 5px;
}