.main-info {
  background: #ff6b1a;
  color: #fff;
  padding: 20px;
}
.main-info .total view {
  font-size: 0.9em;
}
.main-info .total .number {
  font-size: 1.6em;
  margin-top: 3px;
}
.main-info .in-out {
  margin-top: 10px;
}
.main-info .in-out view {
  font-size: 0.6em;
}
.main-info .in-out .number {
  font-size: 1em;
  margin-top: 3px;
}
.main-info .stamp {
  width: 72px;
  height: 72px;
  position: relative;
}
.main-info .stamp view {
  position: absolute;
  left: 0;
  top: 25px;
  line-height: 20px;
  text-align: center;
  width: 100%;
}
.main-list {
  margin-bottom: 50px;
}
.toolbar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 50px;
  background: #fff;
  border-top: #dedede 1px solid;
}
.toolbar .entries {
  min-width: 60px;
  text-align: center;
}
.toolbar .entries image {
  width: 24px;
  height: 24px;
  padding: 3px;
}
.toolbar button {
  height: 36px;
  line-height: 36px;
  border-radius: 18px;
  border: none;
  background: #ff6b1a;
  color: #fff;
  font-size: 0.9em;
}
.mask {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.3);
  display: none;
}
.mask.active {
  display: block;
}